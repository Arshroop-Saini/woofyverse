<%- include("partials/second"); -%>

<br>
<div class="container">
<% if(noMatch !== null) { %>
    <center>
    <h3><%= noMatch %></h3>
  </center>
  <center>
    <p>
      <form action="/breed" method="GET" class="form-inline">
        <div class="form-group">
         <input id="search-box" inputmode="search" spellcheck="true"  autocomplete="on" type="text" name="breed" placeholder="Search dogs by Breed" class="form-control">
          <input type="submit" inputmode="search" spellcheck="true" autocomplete="on" value="Search" class="btn btn-primary">
        </div>
      </form>
    </p>
  </center>
   
    <% } else { %>
      <center>
    <p>
      <form action="/breed" method="GET" class="form-inline">
        <div class="form-group">
        <input id="search-box" inputmode="search" spellcheck="true"  autocomplete="on" type="text" name="breed" placeholder="Search dogs by Breed" class="form-control">
          <input type="submit" inputmode="search" spellcheck="true"  autocomplete="on" value="Search" class="btn btn-primary">
        </div>
      </form>
    </p>
  </center>
  <br><br>
  <p>
    <h1 style="font-weight: 700; font-size:
    40px; text-align: center;" ><%=breed%> Availabe for Adoption</h1> <br>
  </div>
  <% } %>

  <div class="conatiner">
    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4">
    <% posts.forEach(function(post){ %>
   
          <div class="card text-center">
            <img src="<%=post.imagePath%>"class="card-img-top" alt="Logo"></img>
            <div class="card-body">
             
  
            <h4 class="card-title" style="font-weight: 700; font-size:25px; text-align: center;"><%= post.dogName %></h4>
            <% var options = { year: 'numeric', month: 'long', day: 'numeric' }; %>
            <p"><%=post.date.toLocaleDateString('en-us', options)%></p>
            <div><span><%=post.gender%>,</span> <span><%=post.dogAge%></span></div>
            <div><span><%=post.city%>,</span> <span><%=post.state%></span></div>
            <br>
            <div class="share-btn-continer">
              <a href="https://reddit.com/submit?url=https://woofyverse.herokuapp.com/posts/<%=post._id%>&title=<%=post.dogName%>" target="_blank"  class="reddit-btn"> <i class="fa-brands fa-reddit fa-2xl"></i></a>
              
              <a href="https://www.linkedin.com/shareArticle?url=https://woofyverse.herokuapp.com/posts/<%=post._id%>&title=<%=post.dogName%>" target="_blank" class="linkedin-btn"><i class="fa-brands fa-linkedin fa-2xl"></i></a>
          
              <a  href="https://twitter.com/share?url=https://woofyverse.herokuapp.com/posts/<%=post._id%>&text=<%post.dogName%>" target="_blank"  class="twitter-btn"><i class="fa-brands fa-twitter fa-2xl"></i></a>
          
              <a href="https://www.facebook.com/sharer.php?u=https://woofyverse.herokuapp.com/posts/<%=post._id%>" target="_blank" class="facebook-btn"><i class="fa-brands fa-facebook fa-2xl"></i></a>
          
              <a href="https://api.whatsapp.com/send?text=<%=post.dogName%> https://woofyverse.herokuapp.com/posts/<%=post._id%>" target="_blank"  class="whatsapp-btn"><i class="fa-brands fa-whatsapp fa-2xl"></i></a>
          </div>
          <br>
        <a href="/posts/<%=post._id%>" style="font-weight:400; font-size: 18px;" class="btn btn-primary">View Profile</a>
  
            </div>
        </div>
  <br>
  <% }) %>
  </div>
  </div>
    <br><br><br>
</div>

<%- include("partials/footer"); -%>