
<%- include("partials/second"); -%>
<div class="container">
    <h1>Pet Details</h1>
 
    <form class="" action="/compose" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label class="required">Name</label>
        <input autofocus class="form-control" type="text" name="dogName" required>
        <label class="required">Breed</label>
        <input  class="form-control" type="text" name="breed" required>
        <label class="required">Date</label>
        <input type="date" name="postDate" class="form-control" required>
         <label class="required">Age</label>
        <select class="form-control " name = "dogAge" required>
          <option value="" selected disabled hidden>Select</option>
          <option value = "Puppy">Puppyhood</option>
          <option value = "Adolescence">Adolescence</option>
          <option value = "Adult">Adulthood</option>
          <option value = "Senior">Senior</option>
       </select>
       
       <label class="required">Gender</label>
       <select class="form-control " name = "dogGender" required>
        <option value="" selected disabled hidden>Select</option>
         <option value = "Male">Male</option>
         <option value = "Female">Female</option>
      </select>
      <label class="required">Spayed</label>
       <select class="form-control " name = "spayed" required>
        <option value=""  selected disabled hidden>Select</option>
         <option value = "Yes">Yes</option>
         <option value = "No">No</option>
      </select>
      <label class="required">Neutered</label>
      <select class="form-control " name = "neutered" required>
        <option value="" selected disabled hidden>Select</option>
        <option value = "Yes">Yes</option>
        <option value = "No">No</option>
     </select>
     <label class="required">Vaccinated</label>
     <select class="form-control " name = "vaccinated" required>
      <option value="" selected disabled hidden>Select</option>
       <option value = "Yes">Yes</option>
       <option value = "No">No</option>
    </select>
    <label class="required">Good with Kids</label>
       <select class="form-control " name = "kids" required>
        <option value="" selected disabled hidden>Select</option>
         <option value = "Yes">Yes</option>
         <option value = "No">No</option>
      </select>
      <label class="required">Good with Cats</label>
      <select class="form-control " name = "cats" required>
        <option value="" selected disabled hidden>Select</option>
        <option value = "Yes">Yes</option>
        <option value = "No">No</option>
     </select>
     <label class="required">Good with Dogs</label>
       <select class="form-control " name = "dogs" required>
        <option value="" selected disabled hidden>Select</option>
         <option value = "Yes">Yes</option>
         <option value = "No">No</option>
      </select>
      <label class="required">Shots up to Date</label>
      <select class="form-control " name = "shots" required>
       <option value="" selected disabled hidden>Select</option>
        <option value = "Yes">Yes</option>
        <option value = "No">No</option>
     </select>
      <label class="required" for="files" >Select some images of the Dog (All 3 are required)</label>
      <input  accept=".jpg, .png" id="imageOne" name="imageOne" class="form-control" type="file" required>
        <br>

        <h1>Owner Details</h1>
        <label class="required">Name</label>
        <input  class="form-control" type="text" name="ownerName" required>
        <label class="required">Address</label>
        <input type="text" name="address" class="form-control" required>
        <label class="required">State</label>
        <input  spellcheck="true" type="text" name="state" class="form-control" required>
        <label class="required">City</label>
        <input spellcheck="true" type="text" name="city" class="form-control " required>
        <label class="required">Phone</label>
        <input inputmode="tel" type="number" name="ownerPhone"  class="form-control" required>

        <br>

        <h1>Additional Details</h1>
        <label>Why do you want to Rehome your pet?</label>
        <textarea id="aTag"  class="form-contro" name="additionalOne" rows="5" cols="30" ></textarea>
        <label>Additional info about the pet</label>
        <textarea id="bTag" class="form-control" name="additionalTwo" rows="5" cols="30" ></textarea>
        <br>
       
      </div>
      <button class="btn btn-success" type="submit" name="button">Rehome</button>
    </form>
  </div>
  <br>
  <br>
  <br>
<%- include("partials/footer"); -%>
